<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="com.galib.natorepbs2.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_main_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.galib.natorepbs2.ui.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" >
        <action
            android:id="@+id/action_aboutUsFragment_to_atAGlanceFragment"
            app:destination="@id/atAGlanceFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_aboutUsFragment_to_officersFragment"
            app:destination="@id/officersFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_aboutUsFragment_to_juniorOfficerFragment"
            app:destination="@id/juniorOfficerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_aboutUsFragment_to_boardMemberFragment"
            app:destination="@id/boardMemberFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_aboutUsFragment_to_powerOutageContactFragment"
            app:destination="@id/powerOutageContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/atAGlanceFragment"
        android:name="com.galib.natorepbs2.ui.AtAGlanceFragment"
        android:label="AtAGlanceFragment" />
    <fragment
        android:id="@+id/officersFragment"
        android:name="com.galib.natorepbs2.ui.OfficersFragment"
        android:label="fragment_officers"
        tools:layout="@layout/fragment_officers" />
    <fragment
        android:id="@+id/juniorOfficerFragment"
        android:name="com.galib.natorepbs2.ui.JuniorOfficerFragment"
        android:label="JuniorOfficerFragment" />
    <fragment
        android:id="@+id/boardMemberFragment"
        android:name="com.galib.natorepbs2.ui.BoardMemberFragment"
        android:label="BoardMemberFragment" />
    <fragment
        android:id="@+id/powerOutageContactFragment"
        android:name="com.galib.natorepbs2.ui.PowerOutageContactFragment"
        android:label="PowerOutageContactFragment" />


</navigation>