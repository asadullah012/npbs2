<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="menu_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:background">@drawable/home_item_bg</item>
        <item name="android:layout_marginVertical">@dimen/menu_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/menu_margin</item>
        <item name="android:textSize">@dimen/menu_title_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="body_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/body_margin</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text"></item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>