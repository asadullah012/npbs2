<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/outside_border">

    <TextView
        android:id="@+id/serialTextView"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.05"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/titleTextView"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lastValueTextView"
        app:layout_constraintStart_toEndOf="@+id/serialTextView" />

    <TextView
        android:id="@+id/lastValueTextView"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:ellipsize="end"
        android:singleLine="false"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/titleTextView"
        app:layout_constraintEnd_toStartOf="@id/curValueTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/curValueTextView"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lastValueTextView"
        app:layout_constraintStart_toEndOf="@+id/totalValueTextView" />

    <TextView
        android:id="@+id/totalValueTextView"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:singleLine="false"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/curValueTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>